{
  "name": "address-book-tuts",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production react-router build",
    "dev": "trap 'bun dc:stop && exit 0' SIGINT; trap 'exit 0' SIGTERM; bun dc:start && react-router dev --host",
    "dc:start": "docker compose -f ./docker-compose.local.yml -f ./docker-compose.yml up -d --remove-orphans",
    "dc:stop": "docker compose -f ./docker-compose.local.yml -f ./docker-compose.yml down --remove-orphans",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc"
  },
  "dependencies": {
    "@epic-web/remember": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.2",
    "@react-router/node": "^7.1.1",
    "@react-router/serve": "^7.1.1",
    "argon2": "^0.41.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie-es": "^1.2.2",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.4",
    "drizzle-orm": "^0.39.3",
    "isbot": "^5.1.17",
    "lucide-react": "^0.476.0",
    "match-sorter": "^8.0.0",
    "nanoid": "^5.1.2",
    "pg": "^8.13.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "7.0.2",
    "redis": "^4.7.0",
    "sort-by": "^1.2.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@react-router/dev": "^7.1.1",
    "@tailwindcss/vite": "^4.0.8",
    "@types/node": "^20",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "biome": "^0.3.3",
    "cross-env": "^7.0.3",
    "tailwindcss": "^4.0.8",
    "tsx": "^4.19.3",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}